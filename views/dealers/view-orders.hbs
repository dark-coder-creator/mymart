<section>
    <div class="container">
        <div class="row mt-4">
            <a href="" class="btn btn-success ml-auto">Add product</a>
        </div>
        <h1>{{details}}</h1>
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">Date</th>
                    <th>Address</th>
                    <th>Pincode</th>
                    <th>Mobile</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Payment</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                {{#each orders}}
                <tr>

                    <td>{{this.date}}</td>
                    <td>{{this.deliveryDetails.address}}</td>
                    <td>{{this.deliveryDetails.pincode}}</td>
                    <td>{{this.deliveryDetails.mobile}}</td>
                     <td>{{this.totalAmount}}</td>
                      <td>{{this.paymentMethod}}</td>
                       <td>{{this.status}}</td>
                       <td>
                           <a href="/dealers/view-order-products/{{this._id}}"  class="btn btn-primary">View Products</a>
                       </td>
                </tr>
                {{/each}}
                
            </tbody>
        </table>
    </div>
</section>